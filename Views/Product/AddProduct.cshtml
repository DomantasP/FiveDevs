@model ProductViewModel
@{
    ViewData["Title"] = "Product";
}

<div class="col-md-12">


    <form asp-controller="Product" asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" placeholder="Enter title" asp-for="Title" />
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" placeholder="Enter description" asp-for="Description"> </textarea>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="text" class="form-control" id="price" placeholder="Enter price" asp-for="Price" />
        </div>
        <div class="form-group">
            <label for="discount">Discount:</label>
            <input type="text" class="form-control" id="discount" placeholder="Enter discount" asp-for="Discount" />
        </div>

        <div class="form-group">
            <label for="skuCode">Sku code:</label>
            <input type="text" class="form-control" id="sku-code" placeholder="Enter sku code" asp-for="SkuCode" />
        </div>

        <div class="form-group">
            <label for="category">Category:</label>
            <select asp-for="CategoryId"
                    asp-items="@(new SelectList(Model.Categories, "Id", "Title"))">
                <option>Please select one</option>
            </select>
        </div>
        <label for="url">Select main image:</label>
        <label class="btn btn-default">
            <input type="file" id="url" placeholder="Enter image url" asp-for="MainImageFile"/>
        </label>
        <label for="url">Select gallery images:</label>
        <label class="btn btn-default">
            <input type="file" id="url" placeholder="Enter image url" asp-for="Images" multiple />
        </label>


        <div class="col-md-12"><button type="submit" class="btn btn-primary">Save product</button></div>
    </form>
</div>

